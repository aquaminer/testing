{
  "name": "spiral/testing",
  "description": "Spiral Framework testing SDK",
  "keywords": [
    "spiral-packages",
    "spiral",
    "testing"
  ],
  "homepage": "https://github.com/spiral/testing",
  "license": "MIT",
  "authors": [
    {
      "name": "butschster",
      "email": "butschster@gmail.com",
      "role": "Developer"
    },
    {
      "name": "roxblnfk",
      "email": "roxblnfk@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "ext-json": "*",
    "php": ">=7.4",
    "laminas/laminas-diactoros": "^2.4",
    "mockery/mockery": "^1.5",
    "phpunit/phpunit": "^8.5|^9.5",
    "spiral/auth": "^2.9 || ^3.0",
    "spiral/boot": "^2.9 || ^3.0",
    "spiral/console": "^2.9 || ^3.0",
    "spiral/http": "^2.9 || ^3.0",
    "spiral/mailer": "^2.9 || ^3.0",
    "spiral/queue": "^2.9 || ^3.0",
    "spiral/session": "^2.9 || ^3.0",
    "spiral/tokenizer": "^2.9 || ^3.0",
    "symfony/mime": "^5.3|^6.0"
  },
  "suggest": {
    "brianium/paratest": "Required to run tests in parallel (^6.0).",
    "ext-gd": "Required to use generate fake image files"
  },
  "require-dev": {
    "vimeo/psalm": "^4.9"
  },
  "autoload": {
    "psr-4": {
      "Spiral\\Testing\\": "src"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "spiral/composer-publish-plugin": false
    }
  }
}
